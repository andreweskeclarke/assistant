{
  "name": "assistant",
  "displayName": "assistant",
  "description": "Assistant for VS Code",
  "version": "0.0.1",
  "publisher": "aec2718",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./vscode-extension/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "assistant.run",
        "title": "Run Assistant"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node_modules/.bin/tsc --skipLibCheck -p ./",
    "watch": "node_modules/.bin/tsc -watch --skipLibCheck -p ./"
  },
  "dependencies": {
    "openai": "^3.2.1",
    "vscode": "^1.1.37"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "typescript": "^5.0.4"
  }
}
