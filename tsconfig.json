{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "./vscode-extension/out",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"types": [
			"node",
			"vscode"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"explainFiles": true,
		"extendedDiagnostics": true
	},
	"include": [
		"./vscode-extension/src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}